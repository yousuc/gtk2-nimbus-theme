<?xml version="1.0"?>
<metacity_theme>
    <info>
        <name>Nimbus Theme 1.0</name>
        <author>Design Mike Stern - implementation Erwann Chenede)</author>
        <copyright>Sun Microsystems Inc. 2006</copyright>
        <date>2003-02-15</date> 
        <description>Sun's Nimbus theme for metacity</description>
    </info>
    
    <frame_geometry name="normal">
        <distance name="left_width" value="6"/>
        <distance name="right_width" value="6"/>
        <distance name="bottom_height" value="6"/>
        <distance name="left_titlebar_edge" value="3"/>
        <distance name="right_titlebar_edge" value="2"/>
        <distance name="button_width" value="19"/>
        <distance name="button_height" value="18"/>
        <distance name="title_vertical_pad" value="1"/>
        <border name="title_border" left="1" right="1" top="4" bottom="4"/>
        <border name="button_border" left="2" right="3" top="3" bottom="2"/>
    </frame_geometry>
    
    <frame_geometry name="dialog">
        <distance name="left_width" value="2"/>
        <distance name="right_width" value="2"/>
        <distance name="bottom_height" value="6"/>
        <distance name="left_titlebar_edge" value="3"/>
        <distance name="right_titlebar_edge" value="2"/>
        <distance name="button_width" value="19"/>
        <distance name="button_height" value="18"/>
        <distance name="title_vertical_pad" value="1"/>
        <border name="title_border" left="1" right="1" top="4" bottom="4"/>
        <border name="button_border" left="2" right="3" top="3" bottom="2"/>
    </frame_geometry>
    
    <frame_geometry name="normal_maximized" parent="normal">
        <distance name="left_width" value="0"/>
        <distance name="right_width" value="0"/>
        <distance name="bottom_height" value="0"/>
        <distance name="left_titlebar_edge" value="2"/>
        <distance name="right_titlebar_edge" value="1"/>
        <border name="title_border" left="1" right="1" top="3" bottom="4"/>
        <border name="button_border" left="2" right="3" top="3" bottom="3"/>
    </frame_geometry>
    
    <frame_geometry name="utility" title_scale="small">
        <distance name="left_width" value="6"/>
        <distance name="right_width" value="6"/>
        <distance name="bottom_height" value="6"/>
        <distance name="left_titlebar_edge" value="6"/>
        <distance name="right_titlebar_edge" value="6"/>
        <aspect_ratio name="button" value="0.8"/>
        <distance name="title_vertical_pad" value="1"/>
        <border name="title_border" left="1" right="1" top="4" bottom="4"/>
        <border name="button_border" left="1" right="1" top="4" bottom="4"/>
    </frame_geometry>
    
    <frame_geometry name="border" has_title="false">
        <distance name="left_width" value="1"/>
        <distance name="right_width" value="1"/>
        <distance name="bottom_height" value="1"/>
        <distance name="left_titlebar_edge" value="0"/>
        <distance name="right_titlebar_edge" value="0"/>
        <distance name="button_width" value="0"/>
        <distance name="button_height" value="0"/>
        <distance name="title_vertical_pad" value="1"/>
        <border name="title_border" left="0" right="0" top="0" bottom="0"/>
        <border name="button_border" left="0" right="0" top="0" bottom="0"/>
    </frame_geometry>
    
    <!-- Buttons definitions  -->
    
    <!-- Unfocused state -->
    
    <draw_ops name="minimize_button_unfocused">
        <image filename="button-min-icon-unfocused.png" x="0" y="0" width="width" height="height"/>
    </draw_ops>
    
    <draw_ops name="maximize_button_unfocused">
        <image filename="button-max-icon-unfocused.png" x="0" y="0" width="width" height="height"/>
    </draw_ops>
    
    <draw_ops name="unmaximize_button_unfocused">
        <image filename="button-unmax-icon-unfocused.png" x="0" y="0" width="width" height="height"/>
    </draw_ops>
    
    <draw_ops name="close_button_unfocused">
        <image filename="button-close-icon-unfocused.png" x="0" y="0" width="width" height="height"/>
    </draw_ops>
    
    <draw_ops name="menu_button_unfocused">
        <image filename="button-menu-icon-unfocused.png" x="0" y="0" width="width" height="height"/>
    </draw_ops>
    
    
    <!-- focused state -->
    
    <draw_ops name="minimize_button_not_over">
        <image filename="button-min-icon.png"  x="0" y="0" width="width" height="height"/>
    </draw_ops>
    
    <draw_ops name="maximize_button_not_over">
        <image filename="button-max-icon.png"  x="0" y="0" width="width" height="height"/>
         
    </draw_ops>
    
    <draw_ops name="unmaximize_button_not_over">
        <image filename="button-unmax-icon.png"  x="0" y="0" width="width" height="height"/>
    </draw_ops>
    
    <draw_ops name="close_button_not_over">
        <image filename="button-close-icon.png"  x="0" y="0" width="width" height="height"/>
    </draw_ops>
    
    <draw_ops name="menu_button_normal">
        <image filename="button-menu-icon.png"  x="0" y="0" width="width" height="height"/>
    </draw_ops>
    
    
    <!-- Prelight / Mouse over state -->
    
    <draw_ops name="minimize_button_prelight">
        <image filename="button-min-icon-prelight.png" x="0" y="0" width="width" height="height" />
        	
    </draw_ops>
    
    <draw_ops name="maximize_button_prelight">
        <image filename="button-max-icon-prelight.png" x="0" y="0" width="width" height="height" />
         
    </draw_ops>
    
    <draw_ops name="unmaximize_button_prelight">
        <image filename="button-unmax-icon-prelight.png" x="0" y="0" width="width" height="height" />
         
    </draw_ops>
    
    <draw_ops name="close_button_prelight">
        <image filename="button-close-icon-prelight.png" x="0" y="0" width="width" height="height" />
         
    </draw_ops>
    
    <draw_ops name="menu_button_prelight">
        <image filename="button-menu-icon-prelight.png" x="0" y="0" width="width" height="height" />
         
    </draw_ops>
    
    
    <!-- Pressed State -->
    
    <draw_ops name="minimize_button_pressed">
        <image filename="button-min-icon-pressed.png"  x="0" y="0" width="width" height="height" />
         
    </draw_ops>
    
    <draw_ops name="maximize_button_pressed">
        <image filename="button-max-icon-pressed.png"  x="0" y="0" width="width" height="height" />
         
    </draw_ops>
    
    <draw_ops name="unmaximize_button_pressed">
        <image filename="button-unmax-icon-pressed.png"  x="0" y="0" width="width" height="height" />
         
    </draw_ops>
    
    <draw_ops name="close_button_pressed">
        <image filename="button-close-icon-pressed.png"  x="0" y="0" width="width" height="height" />
         
    </draw_ops>
    
    <draw_ops name="menu_button_pressed">
        <image filename="button-menu-icon-pressed.png"  x="0" y="0" width="width" height="height" />
         
    </draw_ops>
    
    <!-- Frame Drawing routines -->
    
    <!-- Focused State -->
    
    <draw_ops name="title_text_focused">
        
        <icon x="(3 `max` (width- (title_width + mini_icon_width + 5))) / 2"
              y="(((height - title_height) / 2) `max` 0)" 
	      width="mini_icon_width" 
	      height="mini_icon_height"/>
        
        <title color="#c4c7ce"
	       x="((3 `max` (width- (title_width + mini_icon_width + 5))) / 2) + (mini_icon_width + 5)"
	       y="(((height - title_height) / 2) `max` 0) + 1"/>
	       
        <title color="black"
	       x="((3 `max` (width- (title_width + mini_icon_width + 5))) / 2) + (mini_icon_width + 5)"
	       y="(((height - title_height) / 2) `max` 0)"/>
         
        
    </draw_ops>
    
    <draw_ops name="top_titlebar_focused">
        <line color="#f0f1f2" x1="2" y1="1" x2="width - 3" y2="1"/>
        <line color="#95979a" x1="1" y1="1" x2="1" y2="1"/>
        <line color="#95979a" x1="width - 2" y1="1" x2="width - 2" y2="1"/>
        
    </draw_ops>
    
    <draw_ops name="bottom_titlebar_focused">
        <line color="#6c7280" x1="5" y1="height-1" x2="width - 6" y2="height-1"/>
        <!-- grey points -->
        <line color="#959ea7" x1="4" y1="height-1" x2="4" y2="height-1"/>
        <line color="#959ea7" x1="width - 5" y1="height-1" x2="width - 5" y2="height-1"/>
        <!-- whit'ish points -->
        <line color="#cccfd5" x1="1" y1="0" x2="1" y2="height"/>
        <line color="#cccfd5" x1="width-2" y1="0" x2="width-2" y2="height"/>
         
    </draw_ops>
    
    <draw_ops name="left_edge_focused">
        <line color="#cccfd5" x1="1" y1="0" x2="1" y2="height"/>
        <line color="#6c7280" x1="width-1" y1="0" x2="width-1" y2="height"/>
        <line color="#959ea7" x1="width-2" y1="0" x2="width-2" y2="height"/>
    </draw_ops>
    
    <draw_ops name="right_edge_focused">
        <line color="#cccfd5" x1="width-2" y1="0" x2="width-2" y2="height"/>
        <line color="#6c7280" x1="0" y1="0" x2="0" y2="height"/>
        <line color="#959ea7" x1="1" y1="0" x2="1" y2="height"/>
    </draw_ops>
    <draw_ops name="bottom_edge_focused">
        <!-- 1st horizontal line -->
        <line color="#6c7280" x1="5" y1="0" x2="width - 6" y2="0"/>
        <!-- 2 pixels -->
        <line color="#959ea7" x1="4" y1="0" x2="4" y2="0"/>
        <line color="#959ea7" x1="width - 5" y1="0" x2="width - 5" y2="0"/>
        <!-- 2nd horizontal line -->
        <line color="#959ea7" x1="4" y1="1" x2="width - 5" y2="1"/>
        <!-- 3rd line -->
        <line color="#aaafb9" x1="4" y1="2" x2="width - 5" y2="2"/>
        <!-- 4th horizontal line -->
        <!-- 5th horizontal line -->
        <line color="#ebecee" x1="2" y1="4" x2="width - 3" y2="4"/>
        <!-- bottom left point -->
        <line color="#81848a" x1="1" y1="4" x2="1" y2="4"/>
        <!-- bottom right point -->
        <line color="#81848a" x1="width - 2" y1="4" x2="width - 2" y2="4"/>
         
        <!-- left side line and points  -->
        <line color="#cccfd5" x1="1" y1="0" x2="1" y2="2"/>
        <line color="#d5d8dd" x1="1" y1="3" x2="1" y2="3"/>
        <line color="#bdc1c8" x1="2" y1="3" x2="2" y2="3"/>
         
        <!-- right side line and points -->
        <line color="#cccfd5" x1="width - 2" y1="0" x2="width - 2" y2="2"/>
        <line color="#d5d8dd" x1="width - 2" y1="3" x2="width - 2" y2="3"/>
        <line color="#bdc1c8" x1="width - 3" y1="3" x2="width - 3" y2="3"/>
    </draw_ops>

    <draw_ops name="background_focused">
        <!-- fill color -->
        <rectangle color="#aaafb9" x="0" y="0" width="width" height="height" filled="true"/>
        <!-- blackish outline -->
        <rectangle color="#2b2e33" x="0" y="0" width="width-1" height="height-1" filled="false"/>
        
	 <!-- draw title gradient -->
        <gradient type="vertical" x="2" y="2" width="width-4" height="title_height + 2">
            <color value="#e3e5e8"/>
            <color value="#aaafb9"/>
        </gradient>
        	
        <!-- draw top left gradient -->
        <gradient type="vertical" x="1" y="2" width="1" height="title_height + 3">
            <color value="#eeeff1"/>
            <color value="#cccfd5"/>
        </gradient>
        <!-- draw top right gradient -->
        <gradient type="vertical" x="width-2" y="2" width="1" height="title_height + 3">
            <color value="#eeeff1"/>
            <color value="#cccfd5"/>
        </gradient>
    </draw_ops>
    
    <!--  unfocused state -->
    
    <draw_ops name="title_text_unfocused">
        
        <icon x="(3 `max` (width- (title_width + mini_icon_width + 5))) / 2"
	      y="(((height - title_height) / 2) `max` 0)" 
	      width="mini_icon_width" 
	      height="mini_icon_height" alpha="0.3" />
        
        <title color="#c5c8cd"
		x="((3 `max` (width- (title_width + mini_icon_width + 5))) / 2) + (mini_icon_width + 5)"
		y="(((height - title_height) / 2) `max` 0) + 1"/>
        <title color="#787d8b"
	       x="((3 `max` (width- (title_width + mini_icon_width + 5))) / 2) + (mini_icon_width + 5)"
	       y="(((height - title_height) / 2) `max` 0)"/>
    </draw_ops>
    
    <draw_ops name="top_titlebar_unfocused">
        <line color="#9a9fa8" x1="1" y1="1" x2="1" y2="1"/>
        <line color="#9a9fa8" x1="width - 2" y1="1" x2="width - 2" y2="1"/>
    </draw_ops>
    
    <draw_ops name="bottom_titlebar_unfocused">
        <line color="#9ea3ad" x1="5" y1="height-1" x2="width - 6" y2="height-1"/>
        <!-- grey points -->
        <line color="#cbcfd5" x1="4" y1="height-1" x2="4" y2="height-1"/>
        <line color="#cbcfd5" x1="width - 5" y1="height-1" x2="width - 5" y2="height-1"/>
    </draw_ops>
    
    <draw_ops name="left_edge_unfocused">
        <line color="#9ea3ad" x1="width-1" y1="0" x2="width-1" y2="height"/>
        <line color="#cbcfd5" x1="width-2" y1="0" x2="width-2" y2="height"/>
    </draw_ops>
    
    <draw_ops name="right_edge_unfocused">
        <line color="#9ea3ad" x1="0" y1="0" x2="0" y2="height"/>
        <line color="#cbcfd5" x1="1" y1="0" x2="1" y2="height"/>
    </draw_ops>
    
    <draw_ops name="bottom_edge_unfocused">
        <!-- small optim to draw the second line and the 2 pixels of the first line FIXME is it really faster ? -->
        <rectangle color="#cbcfd5" x="4" y="0" width="width - 8" height="2" filled="true"/>
        <!-- 1st horizontal line -->
        <line color="#9ea3ad" x1="5" y1="0" x2="width - 6" y2="0"/>
        <!-- 5th horizontal line -->
        <line color="#d3d6db" x1="2" y1="4" x2="width - 3" y2="4"/>
        
	<!-- bottom left point -->
        <line color="#a6abb3" x1="1" y1="4" x2="1" y2="4"/>
        <!-- bottom right point -->
        <line color="#a6abb3" x1="width - 2" y1="4" x2="width - 2" y2="4"/>
        <!-- left side line -->
        <line color="#c6c9d0" x1="1" y1="3" x2="2" y2="3"/>
        <!-- right side line and points -->
        <line color="#c6c9d0" x1="width - 3" y1="3" x2="width - 2" y2="3"/>
    </draw_ops>
    
    <draw_ops name="background_unfocused">
        <!-- fill color -->
        <rectangle color="#c0c4cb" x="0" y="0" width="width" height="height" filled="true"/>
        <!-- draw title gradient -->
        <gradient type="vertical" x="0" y="0" width="width" height="title_height + 2">
            <color value="#aaaeb7"/>
            <color value="#c0c4cb"/>
        </gradient>
        <!-- blackish outline -->
        <rectangle color="#888d97" x="0" y="0" width="width-1" height="height-1" filled="false"/>
    </draw_ops>
    
    <draw_ops name="blank">
        <!-- nothing -->
    </draw_ops>
    
    <!-- Shaded States -->
    
    <draw_ops name="bottom_titlebar_focused_shaded">
        <!-- bottom line (drawn twice for the 2 pixels -->
        <line color="#81848a" x1="1" y1="height-2" x2="width-2" y2="height-2"/>
        <line color="#dbdde2" x1="2" y1="height-2" x2="width-3" y2="height-2"/>
        <!-- vertical lines -->
        <line color="#d1d3d9" x1="1" y1="0" x2="1" y2="height-3"/>
        <line color="#d1d3d9" x1="width-2" y1="0" x2="width-2" y2="height-3"/>
        <!-- 2 pixels -->
        <line color="#b5bac2" x1="2" y1="height-3" x2="2" y2="height-3"/>
        <line color="#b5bac2" x1="width-3" y1="height-3" x2="width-3" y2="height-3"/>
    </draw_ops>
    
    <draw_ops name="bottom_titlebar_unfocused_shaded">
        <line color="#a6abb3" x1="1" y1="height-2" x2="1" y2="height-2"/>
        <line color="#a6abb3" x1="width-2" y1="height-2" x2="width-2" y2="height-2"/>
    </draw_ops>
    
    <!-- Maximized state -->
    
    <draw_ops name="background_maximized_focused">
        <!-- fill color -->
        <rectangle color="#aaafb9" x="0" y="0" width="width" height="height" filled="true"/>
	<!-- draw title gradient -->
        <gradient type="vertical" x="0" y="0" width="width" height="title_height + 2">
            <color value="#e3e5e8"/>
            <color value="#aaafb9"/>
        </gradient>
    </draw_ops>
    
    <draw_ops name="bottom_titlebar_maximized_focused">
        <line color="#6c7280" x1="0" y1="height-1" x2="width" y2="height-1"/>
    </draw_ops>

    <draw_ops name="background_maximized_unfocused">
        <!-- fill color -->
        <rectangle color="#c0c4cb" x="0" y="0" width="width" height="height" filled="true"/>
        <!-- draw gradient -->
        <gradient type="vertical" x="0" y="0" width="width" height="title_height + 2">
            <color value="#aaaeb7"/>
            <color value="#c0c4cb"/>
        </gradient>
    </draw_ops>
    
    <draw_ops name="bottom_titlebar_maximized_unfocused">
        <line color="#9ea3ad" x1="0" y1="height-1" x2="width" y2="height-1"/>
    </draw_ops>
    
    <!-- dialog box -->
    
    <draw_ops name="dialog_left_edge">
        <line color="#f3faf7" x1="1" y1="0" x2="1" y2="height"/>
    </draw_ops>
    
    <draw_ops name="dialog_right_edge">
        <line color="#f3faf7" x1="width-2" y1="0" x2="width-2" y2="height"/>
    </draw_ops>
    
    <draw_ops name="dialog_left_edge_unfocused">
        <line color="#ebedf2" x1="1" y1="0" x2="1" y2="height"/>
    </draw_ops>
    
    <draw_ops name="dialog_right_edge_unfocused">
        <line color="#ebedf2" x1="width-2" y1="0" x2="width-2" y2="height"/>
    </draw_ops>
    
    <draw_ops name="dialog_bottom_titlebar_focused">
        <line color="#888b90" x1="1" y1="height-1" x2="width - 2" y2="height-1"/>
        <!-- whit'ish vertical lines -->
        <line color="#cccfd5" x1="1" y1="0" x2="1" y2="height-2"/>
        <line color="#cccfd5" x1="width-2" y1="0" x2="width-2" y2="height-2"/>
         
    </draw_ops>
    <draw_ops name="dialog_bottom_titlebar_unfocused">
        <line color="#888b90" x1="1" y1="height-1" x2="width - 2" y2="height-1"/>
    </draw_ops>
    
    <draw_ops name="dialog_bottom_edge">
        
        <gradient type="vertical" x="1" y="0" width="width-2" height="height-1">
            <color value="#ebedf2"/>
            <color value="white"/>
        </gradient>
        	
        
        <!-- vertical lines -->
        <line color="#f3faf7" x1="1" y1="0" x2="1" y2="height-2"/>
        <line color="#f3faf7" x1="width-2" y1="0" x2="width-2" y2="height-2"/>
        
        <!-- bottom line -->
        <line color="white" x1="2" y1="4" x2="width - 3" y2="4"/>
         
        <!-- bottom left point -->
        <line color="#96989c" x1="1" y1="4" x2="1" y2="4"/>
         
        <!-- bottom right point -->
        <line color="#96989c" x1="width - 2" y1="4" x2="width - 2" y2="4"/>
         
    </draw_ops>
    <draw_ops name="dialog_bottom_edge_unfocused">
        
	<!-- bkg color -->
	<rectangle color="#ebedf2" x="2" y="0" width="width-5" height="4" filled="true"/>
	
        <!-- vertical lines -->
        <line color="#ebedf2" x1="1" y1="0" x2="1" y2="height-2"/>
        <line color="#ebedf2" x1="width-2" y1="0" x2="width-2" y2="height-2"/>
        
        <!-- bottom line -->
        <line color="#ebedf2" x1="2" y1="4" x2="width - 3" y2="4"/>
         
        <!-- bottom left point -->
        <line color="#bdc1c8" x1="1" y1="4" x2="1" y2="4"/>
         
        <!-- bottom right point -->
        <line color="#bdc1c8" x1="width - 2" y1="4" x2="width - 2" y2="4"/>
         
    </draw_ops>
 
    <!-- Frame Style Definition             -->
    
    <!-- Normal Unfocused Frame Style -->
    
    <frame_style name="normal_unfocused" geometry="normal">
        <piece position="entire_background" draw_ops="background_unfocused"/>
        <piece position="title" draw_ops="title_text_unfocused"/>
        <piece position="left_edge" draw_ops="left_edge_unfocused"/>
        <piece position="right_edge" draw_ops="right_edge_unfocused"/>
        <piece position="bottom_edge" draw_ops="bottom_edge_unfocused"/>
        <piece position="top_titlebar_edge" draw_ops="top_titlebar_unfocused"/>
        <piece position="bottom_titlebar_edge" draw_ops="bottom_titlebar_unfocused"/>
        
        <button function="close" state="normal" draw_ops="close_button_unfocused"/>
        <button function="close" state="prelight" draw_ops="close_button_prelight"/>
        <button function="close" state="pressed" draw_ops="close_button_pressed"/>
        
        <button function="minimize" state="normal" draw_ops="minimize_button_unfocused"/>
        <button function="minimize" state="prelight" draw_ops="minimize_button_prelight"/>
        <button function="minimize" state="pressed" draw_ops="minimize_button_pressed"/>
        
        <button function="maximize" state="normal" draw_ops="maximize_button_unfocused"/>
        <button function="maximize" state="prelight" draw_ops="maximize_button_prelight"/>
        <button function="maximize" state="pressed" draw_ops="maximize_button_pressed"/>
        
        <button function="menu" state="normal" draw_ops="menu_button_unfocused"/>
        <button function="menu" state="pressed" draw_ops="menu_button_unfocused"/>
    </frame_style>
    
    <frame_style name="normal_focused" geometry="normal">
        <piece position="entire_background" draw_ops="background_focused"/>
        <piece position="title" draw_ops="title_text_focused"/>
        <piece position="left_edge" draw_ops="left_edge_focused"/>
        <piece position="right_edge" draw_ops="right_edge_focused"/>
        <piece position="bottom_edge" draw_ops="bottom_edge_focused"/>
        <piece position="top_titlebar_edge" draw_ops="top_titlebar_focused"/>
        <piece position="bottom_titlebar_edge" draw_ops="bottom_titlebar_focused"/>
        
        <button function="close" state="normal" draw_ops="close_button_not_over"/>
        <button function="close" state="prelight" draw_ops="close_button_prelight"/>
        <button function="close" state="pressed" draw_ops="close_button_pressed"/>
        
        <button function="minimize" state="normal" draw_ops="minimize_button_not_over"/>
        <button function="minimize" state="prelight" draw_ops="minimize_button_prelight"/>
        <button function="minimize" state="pressed" draw_ops="minimize_button_pressed"/>
        
